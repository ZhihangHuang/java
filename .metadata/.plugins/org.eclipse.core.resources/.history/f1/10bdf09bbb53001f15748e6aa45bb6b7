package work;

class MyThread implements Runnable {
	private int ticket = 10;

	public void run() {
		while (true) {
			if (ticket >0) {
				System.out.println(Thread.currentThread().getName()+"售票机第"+ ticket--+"号");
			}else{
				System.exit(0);
			}
		}
	}
}
public class Test {

	public static void main(String[] args) {
		MyThread t = new MyThread();
		Thread t1 = new Thread(t, "1号窗口");
		Thread t2 = new Thread(t, "2号窗口");
		Thread t3 = new Thread(t, "3号窗口");
		t1.start();
		t2.start();
		t3.start();
		System.out.println("主方法main()运行结束！");
	}

}
