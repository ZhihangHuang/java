package work;
import java.util.*;
class NumberException extends Exception{
	int num;
	NumberException(int n){
		num = n;
	}
	public String toString() {
		return "number2" + num +"是0";
	}
}
class Number {
	private int n1;
	private int n2;
	Number(int n3, int n4) {
		n1 = n3;
		n2 = n4;
	}
	int addition () {
		System.out.println("addition is；"+ (n1 +n2));
		return n1 + n2;
	}
	int substration() {
		System.out.println("substraction is；"+ (n1 -n2));
		return n1 - n2;
	}
	int mutltiplication () {
		System.out.println("mutltiplication is "+ n1*n2);
		return n1*n2;
	}
	double division (int n1,int n2) throws NumberException{
		if (n2<0)
			throw new NumberException(n2);
		else
			this.n2 = n2;
		System.out.println("division is "+ n1/n2);
		return n1/n2;
	}
}

public class Work {

	public static void main(String[] args)  {
		// TODO Auto-generated method stub
		int i,j;
		Scanner n = new Scanner(System.in);
		System.out.println("输入你的数字number1 ：");
		i = n.nextInt();
		System.out.println("输入你的数字number2 ：");
		j =n.nextInt();
		Number num = new Number(i,j);
		num.addition();
		num.substration();
		num.mutltiplication();
		try {
			num.division(i,j);
		}
		catch(NumberException e){
			System.out.println("异常处理"+e.toString()+"");
		}
		System.out.println("结束");
	}

}
